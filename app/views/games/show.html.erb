<h1>Games#show</h1>
<p>Find me in app/views/games/show.html.erb</p>

<!-- app/views/articles/_form.html.erb -->
<%= @game.name.upcase %><br>
<% if @game.photo.attached? %>
<%= cl_image_tag @game.photo.key, height: 50, width: 50, crop: :fill %>
<% end %>


Description: <%= @game.description %><br>
Price: <%= @game.price %>â‚¬<br>
Category: <%= @game.category %><br>
Minimum Players: <%= @game.number_of_players_min %><br>
Maximum Players: <%= @game.number_of_players_max %>

<% if @game.user === current_user %>
  <% @game.bookings.each do |booking| %>
    <p><%= booking.user.first_name %> <%= booking.user.last_name %></p>
    <p><%= booking.start_at %></p>
    <p><%= booking.end_at %></p>
  <% end %>
<% else %>
  <%= simple_form_for [@game, @booking] do |f| %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.submit %>
  <% end %>
<% end %>
<br>
<%= link_to "Edit this game", edit_game_path %>
<%= link_to "Delete this game", game_path(@game), data: { turbo_method: :delete, turbo_confirm: "Are your sure?" } %>
<%= link_to "Back to home", games_path %>
