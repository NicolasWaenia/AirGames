<div class="row justify-content-center">
  <div class="col-sm-8 my-2">
    <%= form_with url: games_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "search-btn" %>
    <% end %>
  </div>
</div>

<div data-controller="toggle">
<div class="toggle-map-or-list-btn">
  <button id="toggle-map-or-list-btn" data-action="click->toggle#toggleView" data-toggle-target="toggleButton">Show on the Map</button>
</div>
  <div class="list-container" data-toggle-target="list">
    <%= render "shared/cards" %>
  </div>


  <div class="map-container d-none" data-toggle-target="carte">
    <div data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      style="height: 500px" style="width: 100%">
    </div>
  </div>
</div>
