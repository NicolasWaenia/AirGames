<%= link_to games_path do %>
  <i id="back-btn" class="fa-solid fa-circle-chevron-left"></i>
<% end %>

<%= simple_form_for @game do |f|  %>
  <%= f.input :name %>
  <%= f.input :description, input_html: {id: "description-field"} %>
  <%= f.input :number_of_players_min , collection: (1..6) %>
  <%= f.input :number_of_players_max , collection: (1..16) %>
  <%= f.input :category, collection: ["Card Game", "Adventure", "Farming", "Music", "Party Game", "Science Fiction", "Negotiation", "Children's Game", "Action/Dexterity", "Bluffing", "Murder/Mystery"], placeholder: "Card Game" %>
  <%= f.text_field :price, step: '0.01' %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
