<!-- app/views/bookings/index.html.erb -->

<h2 class="mb-4">My bookings</h2>

<% @bookings.each do |booking| %>
  <%= link_to game_path(booking.game), class: "text-decoration-none text-dark" do %>
    <div class="card mb-3">
      <div class="row g-0">
        <% if booking.game.photo.attached? %>
          <div class="col-md-4">
            <img src="<%= cl_image_path(booking.game.photo.key, crop: :fill) %>" alt="Game Image" class="img-fluid">
          </div>
        <% end %>
        <div class="col-md-8">
          <div class="card-body">
            <h1 class="card-title text-center"><%= booking.game.name %></h1>
            <h6 class="card-subtitle mb-2 text-muted">Category : <%= booking.game.category %></h6>
            <p class="card-text"><%= number_with_precision(booking.game.price, precision: 2) %>â‚¬ per day</p>


            <p class="card-text">
              <small class="text-muted">
                Booking from <%= booking.start_at.strftime("%d/%m/%Y") %> to <%= booking.end_at.strftime("%d/%m/%Y") %>
              </small>
            </p>
            <p class="card-text"><strong>Status:</strong> <%= booking.status %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
